{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Document",
            "type": "shell",
            "command": "latexmk",
            "args": [
                "-jobname=${fileBasenameNoExtension}",
                "-pdf",
                "-pdflatex='pdflatex %O -interaction=nonstopmode \"\\includeonly{${fileBasenameNoExtension}}\\input{%S}\"'",
                "tcc"
                ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}